<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailtab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapSubActivity" >

    <EditText
        android:id="@+id/eventName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/map_event_name"
        android:textColor="#000000"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"  />

    <TextView
        android:id="@+id/eventName_edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eventName"
        android:layout_alignBottom="@+id/eventName"
        android:layout_alignRight="@+id/eventName"
        android:layout_marginRight="10dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:fontFamily="sans-serif-thin"  />

    <EditText
        android:id="@+id/location"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
		android:hint="@string/map_location"
        android:textColor="#000000"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"  >

        <requestFocus />
    </EditText>

     <TextView
         android:id="@+id/location_edit"
         android:layout_width="180dp"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/location"
         android:layout_alignBottom="@+id/location"
         android:layout_alignRight="@+id/location"
         android:layout_marginRight="10dp"
         android:textColor="#000000"
         android:textSize="20dp"
         android:fontFamily="sans-serif-thin"  />

     <TextView
         android:id="@+id/from"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/location"
         android:layout_below="@+id/location"
         android:layout_marginLeft="12dp"
         android:layout_marginTop="20dp"
         android:text="From" 
         android:textColor="#000000"
         android:textSize="20dp"
         android:fontFamily="sans-serif-light" />

     <EditText
         android:id="@+id/date_from"
         android:layout_width="190dp"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/location"
         android:layout_below="@+id/from"
         android:ems="10"
         android:textColor="#000000"
         android:textSize="18dp"
         android:fontFamily="sans-serif-thin"  />

     <EditText
         android:id="@+id/time_from"
         android:layout_width="90dp"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/date_from"
         android:layout_alignBottom="@+id/date_from"
         android:layout_alignRight="@+id/location"
         android:clickable="false"
         android:cursorVisible="false"
         android:ems="10"
         android:focusable="false"
         android:focusableInTouchMode="false"
         android:textColor="#000000"
         android:textSize="18dp"
         android:fontFamily="sans-serif-thin"  />

     <TextView
         android:id="@+id/friends"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/from"
         android:layout_below="@+id/date_from"
         android:layout_marginTop="20dp"
          android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
         android:text="Friends"
         android:textColor="#000000"
         android:textSize="20dp"
         android:fontFamily="sans-serif-light"  />

     <ListView
         android:id="@+id/friendList"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/friends"
         android:layout_below="@+id/friends"
         android:layout_marginLeft="0dp"
         android:layout_marginTop="0dp"
         android:textColor="#000000"
         android:textSize="18dp"
         android:fontFamily="sans-serif-condensed"  >
     </ListView>

</RelativeLayout>